<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/head') %>
<body>
    <%- include ('../partials/header') %>
    <main>
        <div class="main-container row justify-content-center d-flex">
            <div class="col col-4">
                <div class="row row-cols-1 justify-content-center d-flex">
                    <form>
                        <div class="form-search col mx-3 my-1">
                            <label class="form-label" for="searchInput">BUSCAR:</label>
                            <input class="form-control" type="text" id="searchInput" name="searchInput" />
                        </div>
                        <div class="form-sort col mx-3 my-1">
                            <label class="form-label" for="sort">ORDENAR POR:</label>
                            <select class="form-select" id="sort" name="sort">
                                <option value="men-may">Menor a Mayor</option>
                                <option value="may-min">Mayor a Menor</option>
                            </select>
                        </div>
                        <div class="form-min-max col mx-3 my-1">
                            <div class="row">
                                <div class="col">
                                    <label class="form-label" for="minimo">MIN:</label>
                                    <input type="number" id="minimo" name="minimo">
                                </div>
                                <div class="col">
                                    <label class="form-label" for="maximo">MAX:</label>
                                    <input type="number" id="maximo" name="maximo">
                                </div>
                            </div>
                        </div>
                        <div class="row row-cols-2 mx-4">
                            <div class="form-check col">
                                <input class="form-check-input" type="checkbox" id="checkboxNuevos" value="nuevos">
                                <label class="form-check-label" for="checkboxNuevos">
                                    Nuevos
                                </label>
                            </div>
                            <div class="form-check col">
                                <input class="form-check-input" type="checkbox" id="checkboxOfertas" value="ofertas">
                                <label class="form-check-label" for="checkboxOfertas">
                                    Ofertas
                                </label>
                            </div>
                            <div class="form-check col">
                            <input class="form-check-input checkbox" type="checkbox" id="checkboxEspecial"
                                    value="especial">
                                <label class="form-check-label" for="flexCheckDisabled">
                                    Edicion Especial
                                </label>
                            </div>
                            <div class="form-check col">
                                <input class="form-check-input checkbox" type="checkbox" id="checkboxEspecial"
                                    value="favoritos">
                                <label class="form-check-label" for="flexCheckDisabled">
                                    Favoritos
                                </label>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
            <div class="col col-8 shop-products-container">
                <div class="row  row-cols-4">
                    <% products.forEach(product => { %>
                    <div class="col shop-product-card">
                        <div href="" class="card a-card" style="width: 18rem;">
                            <picture>
                                <div id="carouselExampleIndicators" class="carousel slide">
                                    <div class="carousel-indicators">
                                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                    </div>
                                    <div class="carousel-inner">
                                      <div class="carousel-item active">
                                        <img src="<%= product.img_front%>" class="d-block w-100" alt="...">
                                      </div>
                                      <div class="carousel-item">
                                        <img src="<%= product.img_front%>" class="d-block w-100" alt="...">
                                      </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                      <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                      <span class="visually-hidden">Next</span>
                                    </button>
                                  </div>
                            </picture>
                            <div class=" card-body shop-product-description">
                                <p class="shop-product-license"><%= product.product_licence %></p>
                                <h4 class="shop-product-name"><%= product.product_name %></h4>
                                <p class="shop-product-price"><%= product.product_price %></p>
                                <p class="shop-product-installments"><%= product.dues %> CUOTAS SIN INTERES</p>
                            </div>
                        </div>
                    </div>
                   <% }) %>
                    
                </div>
            </div>
            <section class="pagination">
                <ul class="pagination-ul">
                    <li class="pagination-li">◄</li>
                    <li class="pagination-li">1</li>
                    <li class="pagination-li">2</li>
                    <li class="pagination-li">...</li>
                    <li class="pagination-li">9</li>
                    <li class="pagination-li">10</li>
                    <li class="pagination-li">►</li>
                </ul>
            </section>
        </div>
    </main>
    <%- include ('../partials/footer') %>
</body>

</html>