<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head') %>

    <body>
        <%- include ('../partials/header') %>
            <main>
                <div class="container">
                    <div class="container my-4 aling-items-start">
                        <img src="../assets/icons/search_icon.svg" class="searchbutton">
                        <input class="searchinput" type="text" placeholder="código, nombre o categoría">
                    </div>

                    <div class="container justify-content-center d-flex">
                        <h1 class="my-3">
                            LISTADO DE PRODUCTOS
                        </h1>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col">Id</th>
                                <th class="col">Código</th>
                                <th class="col">Nombre del Producto</th>
                                <th class="col">Categoría</th>
                                <th class="col">Licencia</th>
                                <th class="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                            <tr>
                                <th scope="row"><%= product.product_id %></th>
                                <td class=""><%= product.product_sku %></td>
                                <td class=""><%= product.product_name %></td>
                                <td class=""><%= product.category_name %></td>
                                <td class=""><%= product.licence_name %></td>
                                <td class="">
                                    <div class="row">
                                        <div class="col">
                                            <a href="EDITAR"><img src="../assets/icons/edit_pencil.svg"></a>
                                        </div>
                                        <div class="col">
                                            <a class="btn" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal"
                                            data-productid="<%= product.product_id %>" data-productid="<%= product.product_id %>" data-productname="<%= product.product_name %>"></a>
                                                <img src="../assets/icons/delete_trash.svg" class="open-modal">
                                            </a>                                                    
                                        </div>
                                    </div>
                                </td> 
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </main>
            <%- include ('../partials/footer') %>
    
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Desea eliminar el producto?</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            ...
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
        </div>
    </div>
    </body>
    

</html>